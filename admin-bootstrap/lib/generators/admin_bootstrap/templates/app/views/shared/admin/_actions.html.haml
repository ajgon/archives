.btn-group.DataTables_action
  = link_to 'Edit', {:action => :edit, :id => resource.id}, {:class => 'btn btn-primary'}
  %a.btn.btn-primary.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
    %span.caret
  %ul.dropdown-menu
    %li
      = link_to 'Show', {:action => :show, :id => resource.id}
    %li
      = link_to 'Delete', {:action => :destroy, :id => resource.id}, :method => :delete